{
  "name": "next-nest-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/shared/*"
  ],
  "overrides": {
    "@nestjs/config": {
      "@nestjs/common": "^11.1.2"
    }
  },
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "prod": "docker-compose -f docker-compose.prod.yml up --build",
    "prod:build": "docker-compose -f docker-compose.prod.yml build",
    "build:shared": "npx nx run-many -t build --projects=@shared/drizzle,@shared/types",
    "build:all:watch": "npx nx run-many -t dev --projects=@shared/drizzle,@shared/types --parallel",
    "dev:local": "npx nx run-many -t dev --projects=@shared/drizzle,@shared/types,backend,frontend --parallel",
    "nx": "nx",
    "nx:graph": "nx graph",
    "nx:build": "nx run-many -t build",
    "nx:dev": "nx run-many -t dev --parallel",
    "nx:lint": "nx run-many -t lint",
    "nx:test": "nx run-many -t test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "bun@1.1.26",
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^6.0.0",
    "nx": "20.0.0",
    "react-zxing": "^2.1.0",
    "sonner": "^2.0.7",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.1",
    "concurrently": "^9.1.2",
    "tsc-watch": "^7.1.1"
  }
}
