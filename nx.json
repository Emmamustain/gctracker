{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "gctracker.localhost",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "!{projectRoot}/dist/**",
      "!{projectRoot}/build/**"
    ],
    "prod": [
      "default",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/**/*.test.*"
    ]
  },
  "targetDefaults": {
    "build": {
      "inputs": ["prod"],
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": ["default"]
    },
    "test": {
      "inputs": ["default"]
    }
  }
}
