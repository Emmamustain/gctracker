{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/types": ["packages/shared/types/src"],
      "@shared/drizzle": ["packages/shared/drizzle"]
    }
  },
  "include": ["apps/**/*", "packages/**/*"]
}
